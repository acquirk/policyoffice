.title_tools
  = link_to_inline(:options, url_for(:action => :options), :text => t(:options))

.title
  %span#title Search
= render :partial => "search"

.list#contacts
  = render :partial => "contacts/contact", :collection => @contacts

%div{ :style => "margin: 6px 0px 6px 0px" }
  .title
    %span#title #{t :recent_activity}
    = image_tag("loading.gif", :size => "16x16", :id => "loading", :style => "display: none;")
  .remote#options{ hidden }

  .list#activities
    - unless @activities.empty?
      = render :partial => "activity", :collection => @activities
    - else
      #{t :no_activity_records}
